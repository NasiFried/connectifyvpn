# ConnectifyVPN Premium Suite Configuration
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Brand name
BRAND_NAME=ConnectifyVPN

# Debug mode (set to false in production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=/app/logs/connectifyvpn.log

# Maximum log file size
LOG_MAX_SIZE=100MB

# Number of log backup files
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
DB_NAME=connectifyvpn

# Database user
DB_USER=postgres

# Database password (REQUIRED - change this!)
DB_PASSWORD=your_secure_password_here

# SSL mode for database connection
DB_SSL_MODE=prefer

# Database connection pool size
DB_POOL_SIZE=20

# Maximum overflow connections
DB_MAX_OVERFLOW=30

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DATABASE=0

# Redis password (optional but recommended)
REDIS_PASSWORD=redis_password

# Enable Redis SSL
REDIS_SSL=false

# Maximum Redis connections
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# TELEGRAM BOT SETTINGS
# =============================================================================

# Bot token from @BotFather (REQUIRED)
BOT_TOKEN=your_bot_token_here

# Admin user IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# Webhook URL (for production)
WEBHOOK_URL=https://your-domain.com

# Webhook port
WEBHOOK_PORT=8443

# Polling timeout (for development)
POLLING_TIMEOUT=30

# Log channel ID (optional)
LOG_CHANNEL=@your_log_channel

# Broadcast channel ID (optional)
BROADCAST_CHANNEL=@your_broadcast_channel

# =============================================================================
# PAYMENT SETTINGS
# =============================================================================

# ToyyibPay Configuration
TOYYIBPAY_USER_SECRET_KEY=your_toyyibpay_secret_key
TOYYIBPAY_CATEGORY_CODE=your_category_code
TOYYIBPAY_BASE_URL=https://toyyibpay.com

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Crypto Payments (optional)
CRYPTO_ENABLED=false
CRYPTO_WEBHOOK_URL=https://your-domain.com/webhook/crypto

# Pricing
PRICE_TRIAL_RM=1
PRICE_FULL_RM=35

# Subscription durations
TRIAL_DAYS=3
FULL_DAYS=365

# Device limits
TRIAL_DEVICE_LIMIT=1
FULL_DEVICE_LIMIT=5

# Renewal discount (0.1 = 10%)
RENEW_DISCOUNT=0.1

# =============================================================================
# VPN SETTINGS
# =============================================================================

# Xray configuration path
XRAY_CONFIG_PATH=/etc/xray/config.json

# Xray restart command
XRAY_RESTART_COMMAND=systemctl restart xray

# Default ports
VLESS_TLS_PORT=443
VLESS_NTLS_PORT=80
VMESS_TLS_PORT=8443
VMESS_NTLS_PORT=8080
TROJAN_PORT=8443

# WebSocket paths
VLESS_WS_PATH=/vless
VMESS_WS_PATH=/vmess

# TLS SNI (optional)
TLS_SNI=

# Allow insecure connections
ALLOW_INSECURE=false

# SSH Configuration
SSH_USER=root
SSH_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa

# Server management
SERVER_CAPACITY_DEFAULT=20
AUTO_SCALING_ENABLED=true
HEALTH_CHECK_INTERVAL=60
FAILOVER_TIMEOUT=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=ConnectifyVPN <noreply@connectifyvpn.my>

# SMS (Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
PUSH_ENABLED=false
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# Reminder intervals (days, comma-separated)
REMINDER_INTERVALS=7,3,1

# Rate limiting
MAX_NOTIFICATIONS_PER_HOUR=10
NOTIFICATION_COOLDOWN=300

# =============================================================================
# ANALYTICS SETTINGS
# =============================================================================

# Metrics collection
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=90

# Real-time monitoring
REALTIME_ENABLED=true
WEBSOCKET_PORT=8080

# Dashboard
DASHBOARD_PORT=3000
DASHBOARD_SECRET=your_dashboard_secret

# External integrations
GRAFANA_ENABLED=false
PROMETHEUS_ENABLED=false
DATADOG_ENABLED=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here  # CHANGE THIS!
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_COMPLEXITY=true

# Session management
SESSION_TIMEOUT=1800
SESSION_MAX_CONCURRENT=3

# Audit logging
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server binding
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# CORS
CORS_ENABLED=true
CORS_ORIGINS=*

# Static files
STATIC_PATH=web/static
TEMPLATES_PATH=web/templates

# Development
RELOAD=false

# =============================================================================
# TELEGRAM BOT UI SETTINGS
# =============================================================================

# Premium stickers (optional)
STICKER_SUCCESS=CAACAgIAAxkBAAEK...
STICKER_WELCOME=CAACAgIAAxkBAAEK...
STICKER_PREMIUM=CAACAgIAAxkBAAEK...

# UI Theme
UI_THEME=glassmorphism  # glassmorphism, neon, minimal

# Enable animations
ENABLE_ANIMATIONS=true

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Automatic backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Connection timeout
CONNECTION_TIMEOUT=30

# Read timeout
READ_TIMEOUT=30

# Write timeout
WRITE_TIMEOUT=30

# Maximum upload size (MB)
MAX_UPLOAD_SIZE=100

# Enable debug toolbar (development only)
DEBUG_TOOLBAR=false

# Cache TTL (seconds)
CACHE_TTL=300

# Enable query logging
QUERY_LOGGING=false
